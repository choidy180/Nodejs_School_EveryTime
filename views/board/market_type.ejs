<link href="https://fonts.googleapis.com/css2?family=Bellota&family=Poor+Story&family=Single+Day&display=swap"
    rel="stylesheet">
<div class="board_main_right" style="border: 1px solid #585858; text-align: left; padding-top: 10px;">
      <span class="board_list_title" style="margin-bottom: 15px; margin-top: 20px; margin-left: 15px; font-family: 'Noto Sans KR', sans-serif; margin-bottom: 10px;">장터 게시판</span>
      <p class="board_list_sub" style="margin-top: 0px;margin-left: 15px; margin-bottom: 10px; font-family: 'Noto Sans KR', sans-serif; margin-top: 10px;">물건을 사고 파는 곳 입니다.</p>
      <div style="width: 100%; height: 50px; display: flex; flex-direction: row; justify-content: flex-start; align-items: center;">
        <a href="http://localhost:3000/board/market_type=all"><span style="margin-left: 15px; font-size: 25px; font-family: 'Poor Story', cursive; font-weight: 700; margin-right: 20px;">전체</span></a>
        <% if (type == 'sale'){ %>
            <a href="http://localhost:3000/board/market_type/sale"><span style="margin-left: 15px; font-size: 25px; font-family: 'Poor Story', cursive; font-weight: 700; margin-right: 20px; color: #f00;">판매</span></a>
        <%} else {%>
            <a href="http://localhost:3000/board/market_type/sale"><span style="margin-left: 15px; font-size: 25px; font-family: 'Poor Story', cursive; font-weight: 700; margin-right: 20px;">판매</span></a>
        <%}%>
        <% if (type == 'purchase'){ %>
            <a href="http://localhost:3000/board/market_type/purchase"><span style="margin-left: 15px; font-size: 25px; font-family: 'Poor Story', cursive; font-weight: 700; margin-right: 20px; color: #f00;">구매</span></a>
        <%} else {%>
            <a href="http://localhost:3000/board/market_type/purchase"><span style="margin-left: 15px; font-size: 25px; font-family: 'Poor Story', cursive; font-weight: 700; margin-right: 20px;">구매</span></a>
        <%}%>
      </div>
    <div class="board_list_area" style="padding-top: 10px;">
        <% if(sess.user) {%>
        <div style="width: 100%; height: 50px; display: flex; flex-direction: row; justify-content: flex-end; align-items: center;">
            <a href="http://localhost:3000/board/upload_market" class="edit_botton"><button style="text-align: right; font-size: 20px; height: 30px;" class="board_create_button">물품 등록</button></a>
        </div>
        <%}%>
        <div style="width: 100%; height: auto; text-align: center;">
            <% for (var i =0; i <rows.length; i++) 
            {
            var data = rows[i];
            %>
            <div style="width: 98%; height: 200px; display: flex; flex-direction: row; justify-content: center; align-items: center; padding: 10px; border-bottom: 1px solid #585858;">
                <div style="width: 58%; height: 100%; margin: 5px; padding: 5px; padding-top: 10px;text-align: left;">
                    <% if(data.type == 'sale') {%>
                        <p style="font-size: 50px; margin: 0; font-family: 'Poor Story', cursive; font-weight: 700;">[팝니다]</p>
                    <%}%>
                    <% if(data.type == 'purchase') {%>
                        <p style="font-size: 50px; margin: 0; font-family: 'Poor Story', cursive; font-weight: 700;">[삽니다]</p>
                    <%}%>
                    <a href="http://localhost:3000/board/market_posting_inquiry/<%=data.number%>"><p style="font-size: 50px; margin: 0; font-family: 'Poor Story', cursive; font-weight: 700;"><%=data.product%></p></a>
                    <p style="font-size: 60px; margin: 0; color: #f00; font-family: 'Poor Story', cursive; font-weight: 700;"><%=data.price%>원</p>
                </div>
                <div style="width: 30%; height: 100%; display: flex; flex-direction: row; justify-content: center; align-items: center;">
                    <% if(data.img != null) { %>
                        <img src="http://localhost:3000/user/<%=data.img%>" alt="" style="margin: 5px; margin-left: 0px; width: auto; height: 100%; overflow: hidden;" href="http://localhost:3000/board/market_posting_inquiry/<%=data.number%>">
                    <%}%>
                </div>
            </div>
            <%}%>
        </div>
    </div>
</div>