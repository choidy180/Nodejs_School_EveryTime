<link href="https://fonts.googleapis.com/css2?family=Cute+Font&family=Hi+Melody&family=Noto+Sans+KR&display=swap&subset=korean" rel="stylesheet">
<div class="board_main_right" style="border: 1px solid #585858; text-align: left;">
      <p class="board_list_title" style="margin-bottom: 15px; margin-top: 20px; margin-left: 15px; font-family: 'Noto Sans KR', sans-serif;">최신글 보기</p>
      <p class="board_list_sub" style="margin-top: 0px;margin-left: 15px; margin-bottom: 10px;font-family: 'Noto Sans KR', sans-serif;">업데이트된 새 글을 보여드립니다</p>
    <div class="board_list_area">
        <div class="board_classification">
            <div class="board_classification_sort">
                
            </div>
            <div class="board_classification_title">
                <span class="board_classification_text" style="font-size: 20px; font-weight: 700;">제목</span>
            </div>
            <div class="board_classification_name">
                <span class="board_classification_text" style="font-size: 20px; font-weight: 700;">작성자</span>
            </div>
            <div class="board_classification_agree">
                <span class="board_classification_text" style="font-size: 20px; font-weight: 700;"></span>
            </div>
            <div class="board_classification_hit">
                <span class="board_classification_text" style="font-size: 20px; font-weight: 700;">조회수</span>
            </div>
        </div>
        <%  for(var i=0; i<row.length; i++){%>
            <div class="board_classification">
                <div class="board_classification_sort">
                    <span class="board_classification_text" style="font-size: 16px;"><%=row[i].sort%></span>
                </div>
                <div class="board_classification_title_text">
                    <span class="board_classification_text"><a href="http://localhost:3000/content/<%=row[i].number%>"><%=row[i].title%></a></span>
                </div>
                <div class="board_classification_name">
                    <span class="board_classification_text"><%=row[i].user_name%></span>
                </div>
                <div class="board_classification_agree">
                    <span class="board_classification_text"><%=row[i].agree%></span>
                </div>
                <div class="board_classification_hit">
                    <span class="board_classification_text"><%=row[i].hit%></span>
                </div>
            </div>
        <%}%>
    </div>
</div>